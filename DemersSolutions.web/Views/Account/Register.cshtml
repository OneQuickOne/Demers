@model _1Quick1.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<header class="wrap-title">
    <div class="container">
        <h1 class="page-title">Register</h1>

        <ol class="breadcrumb hidden-xs">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="active">Register</li>
        </ol>
    </div>
</header>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" })) {
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@

    <div class="container">
        <div class="center-block register-form">
            <div class="panel panel-default">
                <div class="panel-heading">Register Form</div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> I read <a href="#">Terms and Conditions</a>.
                            </label>
                        </div>
                        <div class="col-md-4">
                            <input type="submit" class="btn btn-primary pull-right" value="Register" />
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- container  -->
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
